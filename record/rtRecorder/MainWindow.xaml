<Window x:Class="rtRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rtRecorder"
        Loaded="Windows_loaded"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="Img_cam" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="Btn_Record" Content="Record" HorizontalAlignment="Left" Margin="584,44,0,0" VerticalAlignment="Top" Height="49" Width="149" FontFamily="Cascadia Code SemiBold" FontSize="24" Click="Btn_Record_Click"/>
        <Button x:Name="Btn_save" Content="Save" HorizontalAlignment="Left" Margin="584,323,0,0" VerticalAlignment="Top" Height="49" Width="149" FontFamily="Cascadia Code SemiBold" FontSize="24" Click="Btn_save_Click"/>
    </Grid>
</Window>
